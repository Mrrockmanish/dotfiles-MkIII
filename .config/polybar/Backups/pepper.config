[module/spotipy]
type              = custom/script
exec              = python3 /home/dead/.config/polybar/scripts/spoti.py
exec-if           = pgrep spotify > /dev/null
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.foreground}
format-background = ${colors.modb1}
format-padding    = 1

[module/playpause]
type              = custom/script
exec              = python3 /home/dead/.config/polybar/scripts/playpause.py
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.magenta}
format-background = ${colors.modb1}
format-padding    = 2


[module/cpu]
type                     = internal/cpu
label                    = %percentage-core1%%
format-prefix            = " "
format-prefix-foreground = ${colors.green}
format-background        = ${colors.modb}
format-padding           = 2

[module/weather]
type                     = custom/script
interval                 = 10
format                   = <label>
format-padding           = 2
format-prefix            = " "
;format-suffix            = "°C"
format-prefix-foreground = ${colors.blue}
format-background        = ${colors.modb}
exec                     = /home/dead/.config/polybar/scripts/weather




[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/ewmh]
type = internal/xworkspaces
enable-scroll = true
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.modb}
label-active = "  "
label-occupied = "  -"
label-urgent = "  #"
label-empty = "  ·"

[module/now_playing]
type = custom/script

exec = "python /home/dead/.config/polybar/scripts/now_playing.py"

tail = true

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground}

label = %output:0:50%
