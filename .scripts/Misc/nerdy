#!/bin/bash
clear
# a system info script written by yours truly
# it's hardcoded stuff, lulz

red="\e[31m"
grn="\e[32m"
ylw="\e[33m"
cyn="\e[36m"
blu="\e[34m"
prp="\e[35m"
bprp="\e[35;1m"
rst="\e[0m"
blk="\e[30m"

color-echo()
{  # print with colors
  echo -e " $red$1  $rst$2"
}

# kernel
color-echo 'kernel' "$(uname -smr)"

# shell
color-echo 'Shell ' 'ZSH'

# wm
color-echo 'WM    ' 'Openbox'

# distro
color-echo 'Distro' 'ArchLabs Minimo'

# ascii art
#echo -e "        "
#echo -e " (-_-) Sublime"
#echo -e "        "

# colors
echo -e " $blk$rst $red$rst $grn$rst $blu$rst $ylw$rst $cyn$rst $prp$rst $bprp$rst"
